!!!
%html
  %head
    %title= title

    = stylesheet_link_tag 'blueprint/screen', :media => 'screen, projection'
    = stylesheet_link_tag 'blueprint/print', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie', :media => 'screen, projection'
    = stylesheet_link_tag 'formtastic', 'formtastic_changes'
    = stylesheet_link_tag 'css3buttons'
    = stylesheet_link_tag 'application'

    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    #menu
      .container
        %h1= link_to 'Desk Stats', root_path
        %ul.tabs
          %li{:class => (request.path =~ /^\/locations/) ? 'active' : ''}= link_to 'Locations', locations_path
          %li{:class => (request.path =~ /^\/categories/) ? 'active' : ''}= link_to 'Categories', categories_path

    #header
      .container
        .breadcrumbs
          = breadcrumbs
        .action_items.right
          = action_items
        %h2.page_title
          = @title

    .container
      #flash
        - flash.each do |key, value|
          .flash{:class => key}= value

      = yield
